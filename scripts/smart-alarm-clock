#/bin/bash

build() {
  echo "Building"
  cd /home/pi/smart-alarm-clock
  cd frontend
  yarn electron:build
  cd ../backend
  yarn build
}

install() {
  echo "Installing"
  cd /home/pi/smart-alarm-clock
  yarn install
}

isInstalled() {
  cd /home/pi/smart-alarm-clock
  if [ -d "frontend/node_modules" ] && [ -d "backend/node_modules" ]; then
    echo "Already installed"
    return 0
  else
    echo "Not installed"
    install
  fi
}

isBuilt() {
  cd /home/pi/smart-alarm-clock
  if [ -d "frontend/build" ] && [ -d "backend/dist" ]; then
    echo "Already built"
    return 0
  else
    echo "Not built"
    build
  fi
}

isInstalled
isBuilt
echo "Starting"
cd /home/pi/smart-alarm-clock/backend
yarn start &
sudo -i -- sh -c 'cd /home/pi/smart-alarm-clock/frontend && yarn electron:start --no-sandbox'
wait $(jobs -rp)
